<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="match_parent"
    tools:layout_width="match_parent"
    tools:orientation="vertical"
    tools:parentTag="LinearLayout">

    <Button
        android:id="@+id/player_controls_ui_button_skip_to_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skip to start" />

    <Button
        android:id="@+id/player_controls_ui_button_jump_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jump back" />

    <Button
        android:id="@+id/player_controls_ui_button_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play/pause" />

    <Button
        android:id="@+id/player_controls_ui_button_jump_ahead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jump ahead" />

    <Button
        android:id="@+id/player_controls_ui_button_skip_to_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skip to end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player_controls_ui_text_time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0:00" />

        <SeekBar
            android:id="@+id/player_controls_ui_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100" />

        <TextView
            android:id="@+id/player_controls_ui_text_time_total_or_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0:58" />

    </LinearLayout>

</merge>