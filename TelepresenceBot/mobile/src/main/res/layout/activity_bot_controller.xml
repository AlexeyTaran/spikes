<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.novoda.tpbot.BotControllerActivity">

  <Button
    android:id="@+id/controller_lazers_button"
    android:layout_width="@dimen/button_size"
    android:layout_height="@dimen/button_size"
    android:layout_centerInParent="true"
    android:background="@color/colorAccent" />

  <Button
    android:id="@+id/controller_left_button"
    android:layout_width="@dimen/button_size"
    android:layout_height="@dimen/button_size"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@id/controller_lazers_button"
    android:text="LEFT" />

  <Button
    android:id="@+id/controller_right_button"
    android:layout_width="@dimen/button_size"
    android:layout_height="@dimen/button_size"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@id/controller_lazers_button"
    android:text="RIGHT" />

  <Button
    android:id="@+id/controller_top_button"
    android:layout_width="@dimen/button_size"
    android:layout_height="@dimen/button_size"
    android:layout_above="@id/controller_lazers_button"
    android:layout_centerHorizontal="true"
    android:text="TOP" />

  <Button
    android:id="@+id/controller_bottom_button"
    android:layout_width="@dimen/button_size"
    android:layout_height="@dimen/button_size"
    android:layout_below="@id/controller_lazers_button"
    android:layout_centerHorizontal="true"
    android:text="BOTTOM" />

</RelativeLayout>
