<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:layout_height="match_parent"
  tools:layout_width="match_parent"
  tools:parentTag="RelativeLayout">

  <ImageButton
    android:id="@+id/controller_lazers_button"
    android:layout_width="@dimen/button_size"
    android:layout_height="@dimen/button_size"
    android:layout_centerInParent="true"
    android:src="@drawable/ic_circle" />

  <ImageButton
    android:id="@+id/controller_left_button"
    android:layout_width="@dimen/button_size"
    android:layout_height="@dimen/button_size"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@id/controller_lazers_button"
    android:src="@drawable/ic_arrow_left" />

  <ImageButton
    android:id="@+id/controller_right_button"
    android:layout_width="@dimen/button_size"
    android:layout_height="@dimen/button_size"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@id/controller_lazers_button"
    android:src="@drawable/ic_arrow_right" />

  <ImageButton
    android:id="@+id/controller_up_button"
    android:layout_width="@dimen/button_size"
    android:layout_height="@dimen/button_size"
    android:layout_above="@id/controller_lazers_button"
    android:layout_centerHorizontal="true"
    android:src="@drawable/ic_arrow_upward" />

  <ImageButton
    android:id="@+id/controller_down_button"
    android:layout_width="@dimen/button_size"
    android:layout_height="@dimen/button_size"
    android:layout_below="@id/controller_lazers_button"
    android:layout_centerHorizontal="true"
    android:src="@drawable/ic_arrow_downward" />

</merge>
